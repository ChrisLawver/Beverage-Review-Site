@model ReviewsSite.Models.Bev
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/Style.css" />
        <title>BEVerly</title>
    </head>
    <header>
        <h1>BEVerly</h1>
        <p><a href="/Bev">Back to Home Page</a></p>
    </header>
    <body>
        <main>
            <h1>@Model.Name </h1>
            <p>Description: @Model.Description</p>
            <p>Category: @Model.Category</p>
            <p>Review: @Model.Review</p>
            <div class="image-container">
                <img src="~/@Model.Image" />
            </div>
        </main>


        <div class="form-container">
        <h2>Leave a review</h2>
            <form asp-action="Create" method="post">
                <input type="hidden" id="BevId" name="BevId" value="@Model.Id" />
                <div class="text-success">@ViewBag.Result</div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" />
                <br />

                <p>Giv a rating:</p>
                <label for=" oneStar">1 Star</label>
                <input type="radio" id="oneStar" name="rating" />
                <br />

                <label for=" twoStar">2 Stars</label>
                <input type="radio" id="twoStar" name="rating" />
                <br />

                <label for=" threeStar">3 Stars</label>
                <input type="radio" id="threeStar" name="rating" />
                <br />

                <label for=" fourStar">4 Stars</label>
                <input type="radio" id="fourStar" name="rating" />
                <br />

                <label for=" fiveStar">5 Stars</label>
                <input type="radio" id="fiveStar" name="rating" />
                <br />

                <textarea name="review"></textarea>
                <br />

                <input type="submit" />

            </form>
        </div>

        @foreach (var item in Model.Reviews)
        {
            <div class="review-container">
                <p>Reviewer Name: <a href="/Review/Update/@item.Id">@item.ReviewerName </a></p>
                <p>Star Rating: @item.Rating</p>
                <p>@item.Content</p>
            </div>
           
        }




        <footer>
            &copy; BEVerly 2021
        </footer>

    </body>
    </html>