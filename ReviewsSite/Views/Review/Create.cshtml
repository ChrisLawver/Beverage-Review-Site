@model ReviewsSite.Models.Review
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Review</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="form-container">
                <h2>Leave a review</h2>
                <form asp-action="Create" method="post">
                    <input type="hidden" id="BevId" name="BevId" value="@Model.BevId" />
                    <div class="text-success">@ViewBag.Result</div>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" />
                    <br />

                    <p>Give a rating:</p>
                    <label for=" oneStar">1 Star</label>
                    <input type="radio" id="oneStar" name="rating" />
                    <br />

                    <label for=" twoStar">2 Stars</label>
                    <input type="radio" id="twoStar" name="rating" />
                    <br />

                    <label for=" threeStar">3 Stars</label>
                    <input type="radio" id="threeStar" name="rating" />
                    <br />

                    <label for=" fourStar">4 Stars</label>
                    <input type="radio" id="fourStar" name="rating" />
                    <br />

                    <label for=" fiveStar">5 Stars</label>
                    <input type="radio" id="fiveStar" name="rating" />
                    <br />

                    <textarea name="review"></textarea>
                    <br />

                    <input type="submit" />
                </form>
            </div>
        </div>
    </div>

    <div>
        <a href="/Bev/Details/@Model.BevId">Back to List</a>
    </div>
    

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
